{
    "compilerOptions": {
      "target": "ES6", // Target de salida, compatible con la mayoría de navegadores
      "module": "ESNext", // Usa ESNext para exportar módulos ESM
      "jsx": "react", // Transpila JSX para React
      "outDir": "./dist/standalone", // Carpeta donde se colocarán los archivos compilados
      "rootDir": "./src", // Carpeta raíz donde están los archivos fuente
      "declaration": true, // Generar archivos de tipos .d.ts
      "declarationDir": "./dist/standalone/type", // Colocar los archivos de tipos en la carpeta dist
      "strict": true, // Habilitar opciones estrictas de TypeScript
      "moduleResolution": "node", // Resolver módulos como Node.js
      "esModuleInterop": true, // Permitir interoperabilidad entre CommonJS y ESM
      "skipLibCheck": true, // Omitir verificación de tipos en node_modules
      "forceConsistentCasingInFileNames": true, // Consistencia en nombres de archivos
      "resolveJsonModule": true,      
      "allowJs": true,
      "baseUrl": "./",
      "paths": {
        "*": ["types/*"]
      }
    },
    "include": ["src/**/*","src/**/*.svg"  ], // Incluye todos los archivos en la carpeta src
    "exclude": ["node_modules", "dist"] // Excluye node_modules y la carpeta dist
  }
  
  